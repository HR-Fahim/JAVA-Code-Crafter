
import java.util.Scanner;

class CCClass {
    public CCClass(String str) {
        StringBuilder spacedWord = new StringBuilder();
        String[] words = str.split(" ");

        for (String word : words) {
            spacedWord.append(Character.toUpperCase(word.charAt(0))).append(word.substring(1));
        }

        String result = spacedWord.toString();
        System.out.println(result);
    }
}

class CMClass {
    public CMClass(String str) {
        StringBuilder spacedWord = new StringBuilder();
        String[] words = str.split(" ");

        for (String word : words) {
            spacedWord.append(Character.toUpperCase(word.charAt(0))).append(word.substring(1));
        }

        String result = spacedWord.toString();
        System.out.print(result);
        System.out.println("()");
    }
}

class CVClass {
    public CVClass(String str) {
        StringBuilder spacedWord = new StringBuilder();
        String[] words = str.split(" ");

        for (String word : words) {
            spacedWord.append(Character.toUpperCase(word.charAt(0))).append(word.substring(1));
        }

        String result = spacedWord.toString();
        System.out.println(result);
    }
}

class SCClass {
    public SCClass(String str) {
        StringBuilder spacedWord = new StringBuilder();
        String[] words = str.split(" ");

        for (int i = 0; i < words.length; i++) {
            if (i > 0) {
                spacedWord.append(Character.toUpperCase(words[i].charAt(0))).append(words[i].substring(1));
            } else {
                spacedWord.append(words[i].toLowerCase());
            }
        }

        String result = spacedWord.toString();
        System.out.println(result);
    }
}

class SMClass {
    public SMClass(String str) {
        StringBuilder spacedWord = new StringBuilder();
        String[] words = str.split(" ");

        for (int i = 0; i < words.length; i++) {
            if (i > 0) {
                spacedWord.append(Character.toUpperCase(words[i].charAt(0))).append(words[i].substring(1));
            } else {
                spacedWord.append(words[i].toLowerCase());
            }
        }

        String result = spacedWord.toString();
        System.out.print(result);
        System.out.println("()");
    }
}

class SVClass {
    public SVClass(String str) {
        StringBuilder spacedWord = new StringBuilder();
        String[] words = str.split(" ");

        for (int i = 0; i < words.length; i++) {
            if (i > 0) {
                spacedWord.append(Character.toUpperCase(words[i].charAt(0))).append(words[i].substring(1));
            } else {
                spacedWord.append(words[i].toLowerCase());
            }
        }

        String result = spacedWord.toString();
        System.out.println(result);
    }
}

public class DEMO {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String str;

        while (scanner.hasNextLine()) {
            str = scanner.nextLine();

            String[] parts = str.split(";");
            String operation = parts[0];
            String type = parts[1];
            String words = parts[2];

            if (operation.equals("S")) {
                if (type.equals("M")) {
                    new SMClass(words);
                } else if (type.equals("C")) {
                    new SCClass(words);
                } else if (type.equals("V")) {
                    new SVClass(words);
                }
            } else if (operation.equals("C")) {
                if (type.equals("M")) {
                    new CMClass(words);
                } else if (type.equals("C")) {
                    new CCClass(words);
                } else if (type.equals("V")) {
                    new CVClass(words);
                }
            }
        }

        scanner.close();
    }
}

